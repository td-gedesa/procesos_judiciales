<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Cobranzas List View -->
        <record id="view_cobranzas_proces_list" model="ir.ui.view">
            <field name="name">cobranzas.proces.list</field>
            <field name="model">cobranzas.proces</field>
            <field name="arch" type="xml">
                <list string="Procesos de Cobranzas">
                    <field name="numero"/>
                    <field name="ciudad_id"/>
                    <field name="empresa"/>
                    <field name="entidad"/>
                    <field name="monto_adeudado"/>
                    <field name="fecha_contrato"/>
                    <field name="fecha_recepcion"/>
                    <field name="estado_proceso"/>
                </list>
            </field>
        </record>

        <!-- Cobranzas Form View -->
        <record id="view_cobranzas_proces_form" model="ir.ui.view">
            <field name="name">cobranzas.proces.form</field>
            <field name="model">cobranzas.proces</field>
            <field name="arch" type="xml">
                <form string="Proceso de Cobranza">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <h2>
                            <field name="numero" class="oe_inline" readonly="1"/>
                        </h2>
                        <group>
                            <group>
                                <field name="empresa" required="1"/>
                                <field name="ciudad_id" required="1"/>
                                <field name="entidad"/>
                            </group>
                            <group>
                                <field name="monto_adeudado"/>
                                <field name="company_currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="fecha_contrato"/>
                                <field name="fecha_recepcion"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Datos de Contrato">
                                <field name="datos_contrato" widget="html"/>
                            </page>
                            <page string="Resumen de Acciones">
                                <field name="resumen_acciones" widget="html"/>
                            </page>
                            <page string="Estado del Proceso">
                                <field name="estado_proceso" widget="html"/>
                            </page>
                            <page string="Anotaciones">
                                <field name="anotaciones" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Cobranzas Search View -->
        <record id="view_cobranzas_proces_search" model="ir.ui.view">
            <field name="name">cobranzas.proces.search</field>
            <field name="model">cobranzas.proces</field>
            <field name="arch" type="xml">
                <search string="Procesos de Cobranzas">
                    <field name="numero" string="NÂº"/>
                    <field name="ciudad_id" string="Ciudad"/>
                    <field name="empresa" string="Empresa"/>
                    <field name="entidad" string="Entidad"/>
                </search>
            </field>
        </record>

        <!-- Cobranzas Action -->
        <record id="action_cobranzas_proces" model="ir.actions.act_window">
            <field name="name">Procesos de Cobranzas</field>
            <field name="res_model">cobranzas.proces</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer proceso de cobranza
                </p>
            </field>
        </record>

    </data>
</odoo>
