<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record id="view_procesos_judiciales_list" model="ir.ui.view">
            <field name="name">procesos.judiciales.list</field>
            <field name="model">procesos.judiciales</field>
            <field name="arch" type="xml">
                <list string="Procesos Judiciales">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_procesos_judiciales_form" model="ir.ui.view">
            <field name="name">procesos.judiciales.form</field>
            <field name="model">procesos.judiciales</field>
            <field name="arch" type="xml">
                <form string="Proceso Judicial">
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <group>
                                <field name="state"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <field name="description" widget="html"/>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_procesos_judiciales_search" model="ir.ui.view">
            <field name="name">procesos.judiciales.search</field>
            <field name="model">procesos.judiciales</field>
            <field name="arch" type="xml">
                <search string="Procesos Judiciales">
                    <field name="name" string="Nombre del Proceso"/>
                    <field name="state"/>
                    <filter name="draft" string="Borrador" domain="[('state', '=', 'draft')]"/>
                    <filter name="active" string="Activo" domain="[('state', '=', 'active')]"/>
                    <filter name="closed" string="Cerrado" domain="[('state', '=', 'closed')]"/>
                    <separator/>
                    <filter name="filter_date_start" string="Fecha de Inicio" date="date_start"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_procesos_judiciales" model="ir.actions.act_window">
            <field name="name">Procesos Judiciales</field>
            <field name="res_model">procesos.judiciales</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer proceso judicial
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem
            id="menu_procesos_judiciales_root"
            name="Procesos Judiciales"
            sequence="10"/>

        <!-- Submenus by Category -->
        <menuitem
            id="menu_procesos_judiciales_gedesa"
            name="Gedesa"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_gedesa_proces"
            sequence="1"/>

        <menuitem
            id="menu_procesos_judiciales_saint_moritz"
            name="Saint Moritz"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_saint_moritz_proces"
            sequence="2"/>

        <menuitem
            id="menu_procesos_judiciales_qualitat"
            name="Qualitat"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_qualitat_proces"
            sequence="3"/>

        <menuitem
            id="menu_procesos_judiciales_elite_brands"
            name="Elite Brands"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_elite_brands_proces"
            sequence="4"/>

        <menuitem
            id="menu_procesos_judiciales_otros"
            name="Otros"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_otros_proces"
            sequence="5"/>

        <menuitem
            id="menu_procesos_judiciales_cobranzas"
            name="Cobranzas"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_cobranzas_proces"
            sequence="6"/>

        <menuitem
            id="menu_procesos_judiciales_aduana"
            name="Aduana"
            parent="menu_procesos_judiciales_root"
            action="procesos_judiciales.action_aduana_proces"
            sequence="7"/>

    </data>
</odoo>
