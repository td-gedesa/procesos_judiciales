<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Module Category -->
        <record id="module_category_procesos_judiciales" model="ir.module.category">
            <field name="name">Procesos Judiciales</field>
            <field name="sequence">100</field>
        </record>

        <!-- Security Groups -->
        <record id="group_procesos_judiciales_lector" model="res.groups">
            <field name="name">Lector</field>
            <field name="category_id" ref="module_category_procesos_judiciales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_procesos_judiciales_administracion" model="res.groups">
            <field name="name">Administracion</field>
            <field name="category_id" ref="module_category_procesos_judiciales"/>
            <field name="implied_ids" eval="[(4, ref('procesos_judiciales.group_procesos_judiciales_lector'))]"/>
        </record>

    </data>
</odoo>
