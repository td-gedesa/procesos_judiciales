<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Aduana List View -->
        <record id="view_aduana_proces_list" model="ir.ui.view">
            <field name="name">aduana.proces.list</field>
            <field name="model">aduana.proces</field>
            <field name="arch" type="xml">
                <list string="Procesos de Aduana">
                    <field name="numero"/>
                    <field name="ciudad_id"/>
                    <field name="tipo_proceso_id"/>
                    <field name="empresa"/>
                    <field name="fecha_inicio_proceso"/>
                    <field name="breve_resumen"/>
                    <field name="estado_proceso"/>
                </list>
            </field>
        </record>

        <!-- Aduana Form View -->
        <record id="view_aduana_proces_form" model="ir.ui.view">
            <field name="name">aduana.proces.form</field>
            <field name="model">aduana.proces</field>
            <field name="arch" type="xml">
                <form string="Proceso de Aduana">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <h2>
                            <field name="numero" class="oe_inline" readonly="1"/>
                        </h2>
                        <group>
                            <group>
                                <field name="empresa" required="1"/>
                                <field name="ciudad_id" required="1"/>
                                <field name="tipo_proceso_id" required="1"/>
                            </group>
                            <group>
                                <field name="fecha_inicio_proceso"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Breve Resumen">
                                <field name="breve_resumen" widget="html"/>
                            </page>
                            <page string="Estado del Proceso">
                                <field name="estado_proceso" widget="html"/>
                            </page>
                            <page string="Próxima Actuación/Estrategia">
                                <field name="proxima_actuacion_estrategia" widget="html"/>
                            </page>
                            <page string="Anotaciones">
                                <field name="anotaciones" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Aduana Search View -->
        <record id="view_aduana_proces_search" model="ir.ui.view">
            <field name="name">aduana.proces.search</field>
            <field name="model">aduana.proces</field>
            <field name="arch" type="xml">
                <search string="Procesos de Aduana">
                    <field name="numero" string="Nº"/>
                    <field name="ciudad_id" string="Ciudad"/>
                    <field name="tipo_proceso_id" string="Tipo de Proceso"/>
                    <field name="empresa" string="Empresa"/>
                </search>
            </field>
        </record>

        <!-- Aduana Action -->
        <record id="action_aduana_proces" model="ir.actions.act_window">
            <field name="name">Procesos de Aduana</field>
            <field name="res_model">aduana.proces</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer proceso de aduana
                </p>
            </field>
        </record>

    </data>
</odoo>
