<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Categoría de Módulo Procesos Judiciales -->
        <record id="module_category_procesos_judiciales" model="ir.module.category">
            <field name="name">Procesos judiciales</field>
            <field name="description">Módulo para la gestión de procesos judiciales</field>
        </record>

        <!-- Grupo de Administración -->
        <record id="group_procesos_administracion" model="res.groups">
            <field name="name">Administracion</field>
            <field name="category_id" ref="module_category_procesos_judiciales"/>
            <field name="comment">Usuarios con acceso total (lectura, escritura, creación, eliminación) a todos los procesos judiciales</field>
        </record>

        <!-- Grupo de Vista de Usuario -->
        <record id="group_procesos_vista_usuario" model="res.groups">
            <field name="name">vista de usuario</field>
            <field name="category_id" ref="module_category_procesos_judiciales"/>
            <field name="comment">Usuarios con acceso de solo lectura a los procesos judiciales</field>
        </record>
    </data>
</odoo>
