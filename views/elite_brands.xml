<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Elite Brands List View -->
        <record id="view_elite_brands_proces_list" model="ir.ui.view">
            <field name="name">elite.brands.proces.list</field>
            <field name="model">elite.brands.proces</field>
            <field name="arch" type="xml">
                <list string="Procesos Elite Brands">
                    <field name="numero"/>
                    <field name="ciudad_id"/>
                    <field name="tipo_proceso_id"/>
                    <field name="juzgado_nurej"/>
                    <field name="demandante_o_denunciante"/>
                    <field name="demandado_o_denunciado"/>
                    <field name="fecha_inicio_proceso"/>
                    <field name="monto_demandado"/>
                    <field name="monto_cancelado"/>
                    <field name="estado_proceso"/>
                </list>
            </field>
        </record>

        <!-- Elite Brands Form View -->
        <record id="view_elite_brands_proces_form" model="ir.ui.view">
            <field name="name">elite.brands.proces.form</field>
            <field name="model">elite.brands.proces</field>
            <field name="arch" type="xml">
                <form string="Proceso Judicial Elite Brands">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <h2>
                            <field name="numero" class="oe_inline" readonly="1"/>
                        </h2>
                        <group>
                            <group>
                                <field name="ciudad_id" required="1"/>
                                <field name="tipo_proceso_id" required="1"/>
                                <field name="juzgado_nurej" required="1"/>
                                <field name="fecha_inicio_proceso"/>
                            </group>
                            <group>
                                <field name="monto_demandado"/>
                                <field name="monto_cancelado"/>
                                <field name="company_currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Partes del Proceso">
                            <group>
                                <field name="demandante_o_denunciante"/>
                            </group>
                            <group>
                                <field name="demandado_o_denunciado"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Causa Demandada">
                                <field name="causa_demandada" widget="html"/>
                            </page>
                            <page string="Estado del Proceso">
                                <field name="estado_proceso" widget="html"/>
                            </page>
                            <page string="Próxima Actuación/Estrategia">
                                <field name="proxima_actuacion_estrategia" widget="html"/>
                            </page>
                            <page string="Anotaciones">
                                <field name="anotaciones" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Elite Brands Search View -->
        <record id="view_elite_brands_proces_search" model="ir.ui.view">
            <field name="name">elite.brands.proces.search</field>
            <field name="model">elite.brands.proces</field>
            <field name="arch" type="xml">
                <search string="Procesos Elite Brands">
                    <field name="numero" string="Nº"/>
                    <field name="ciudad_id" string="Ciudad"/>
                    <field name="demandante_o_denunciante" string="Demandante"/>
                    <field name="demandado_o_denunciado" string="Demandado"/>
                    <field name="tipo_proceso_id"/>
                </search>
            </field>
        </record>

        <!-- Elite Brands Action -->
        <record id="action_elite_brands_proces" model="ir.actions.act_window">
            <field name="name">Procesos Elite Brands</field>
            <field name="res_model">elite.brands.proces</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer proceso de Elite Brands
                </p>
            </field>
        </record>

    </data>
</odoo>
